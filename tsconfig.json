{
  "compilerOptions": {
    // 파일 구조
    "rootDir": "./src",
    "outDir": "./dist",

    // 실행 환경
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"],

    // 컴파일 결과
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,

    "noImplicitAny": false

  },
  "include": ["src"]
}
